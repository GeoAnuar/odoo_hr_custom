<odoo>
  <record id="hr_employee_form_inherit_documents_tab" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit.documents.tab</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='personal_information']" position="after">
        <page name="documents" string="Документы">
          <group>
            <div class="o_form_label">Здесь будут документы сотрудника.</div>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
