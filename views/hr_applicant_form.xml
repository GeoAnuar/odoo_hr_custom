<odoo>
  <record id="view_hr_applicant_form_custom" model="ir.ui.view">
    <field name="name">hr.applicant.form.custom</field>
    <field name="model">hr.applicant</field>
    <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/sheet/group" position="after">


        <group string="Стадия 1: Решение о принятии" invisible="stage_id != %(hr_custom.hr_stage_decision)d">
          <field name="expected_salary"/>
          <field name="birth_date"/>
          <field name="company_id"/>
          <field name="employment_date"/>
          <field name="trial_start"/>
          <field name="trial_end"/>
          <field name="phone"/>
          <field name="recruiter_id"/>
        </group>
  

        <group string="Стадия 2: Получение документов" invisible="stage_id != %(hr_custom.hr_stage_documents)d">
          <field name="diploma_pdf"/>
          <field name="attachment_pdf"/>
          <field name="identity_pdf"/>
          <field name="resume_pdf"/>
          <field name="certificate_pdf"/>
          <field name="registration_address"/>
          <field name="residence_address"/>
          <field name="email"/>
          <field name="phone"/>
          <field name="bank_details_pdf"/>
        </group>



      </xpath>
    </field>
  </record>
</odoo>
